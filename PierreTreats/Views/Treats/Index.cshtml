@{
  Layout = "_Layout";
}

@using PierreTreats.Models;
@model List<PierreTreats.Models.Treat>;

<h1>Treats</h1>

@if (@Model.Count == 0)
{
  <h3>You have not sampled any treats yet!</h3>
} 

@foreach (Treat treat in Model)
{
  <li>@Html.ActionLink($"{treat.TreatType}", "Details", new { id = treat.TreatId })</li>
}

<p>@Html.ActionLink("Add a new treat", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p> 
@{
  Layout = "_Layout";
}
@using PierreTreats.Models
@model IEnumerable<PierreTreats.Models.Flavor>

<h1>Flavors</h1>

@if (Model.Any())
{
    <ul>
      @foreach (Flavor flavor in Model)
      {
          <li>@Html.ActionLink($"{flavor.FlavorNotes}", "Details", new { id = flavor.FlavorId })</li>
      }
    </ul>
} 
else
{
    <h3>No items have been added yet!</h3>
}
